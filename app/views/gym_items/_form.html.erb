<%= form_with( model: @gym_item) do |f| %>
	<%= render 'gym_items/error_messages', object: f.object %> 

	<%= f.label :name %>
	<%= f.text_field :name, class: 'form-entry' %>

	<%= f.label :focus %>
	<%= f.select :focus, get_focusses, include_blank: true, class: 'form-entry'  %>

	<%= f.label :description %>
	<%= f.text_area  :description, class: 'form-entry' %>

	<%= f.submit yield(:button_text), class: 'button' %>
<% end %>

<h3> Focus categories:</h3>
<ul>
	<li>cardio</li>
	<li>strength-upper</li>
	<li>strength-lower</li>
	<li>auxiliary</li>
</ul>

